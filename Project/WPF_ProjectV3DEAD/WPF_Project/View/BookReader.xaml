<Window x:Class="WPF_Project.BookReader"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Project"
        mc:Ignorable="d"
        Title="BookReader" Height="760" Width="500"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        >
    <Grid VerticalAlignment="Top">
        <StackPanel>
        
            <ScrollViewer Height="670">
                <RichTextBox x:Name="bookText" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Margin="10 10 0 0"/>
            </ScrollViewer>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="-" Click="DecreaseFontSize" Margin="10"/>
                <TextBlock x:Name="NumberOf" Margin="20"/>
                <Button Content="+" Click="IncreaseFontSize" Margin="10"/>
            </StackPanel>
        </StackPanel>
        
    </Grid>
</Window>
